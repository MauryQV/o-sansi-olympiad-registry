generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Supabase usa UUIDs
  email     String   @unique
  role      String   @default("user") // admin, user, etc.
  createdAt DateTime @default(now())
}
